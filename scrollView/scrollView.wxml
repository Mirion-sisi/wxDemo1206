<!-- 1.水平滚动 scroll-x -->
<!-- view是块级元素 -->
<scroll-view class="container1" scroll-x >
<view class="view1" wx:for="{{10}}">{{item}}</view>
</scroll-view>


<!-- 2.垂直滚动:scroll-y -->
<scroll-view class="container2" scroll-y>
<view wx:for='{{10}}' class="view2">{{item}}</view>
</scroll-view>

<!-- 3.补充:监听滚动的位置 -->
<scroll-view
bindscroll="handleScroll"
 class="container3" scroll-y
 >
<view wx:for='{{10}}' class="view3">{{item}}</view>
</scroll-view>

