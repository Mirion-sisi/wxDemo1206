<!-- 1.input基本使用 -->

<input></input>

<!-- 2.value:input中的默认值 -->
<input value="哈哈哈"></input>

<!-- 3.type:决定键盘类型(文本输入键盘/数字/身份证) -->
<input type="number"></input>

<!-- 4.password:密码框 -->
<input password></input>

<!-- 5.placeholder 提示语 -->
<input placeholder="请输入姓名"></input>

<!-- 6.input监听事件 -->
<input
bindinput="handleInput"
bindblur="handleBlur"
bindfocus="handleFocus"
></input>
